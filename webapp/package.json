{
  "name": "parkeasy",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "coverage:unit": "vitest run --coverage",
    "coverage:integration": "VITE_COVERAGE=true playwright test; rc=$?; nyc report --report-dir coverage-playwright --reporter clover; exit $rc"
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^5.1.0",
    "@neoconfetti/svelte": "^2.2.1",
    "@playwright/test": "^1.47.1",
    "@sveltejs/adapter-auto": "^3.2.4",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/svelte": "^5.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.5.5",
    "@vitest/coverage-istanbul": "^2.1.1",
    "autoprefixer": "^10.4.20",
    "carbon-components-svelte": "^0.85.2",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.0",
    "globals": "^15.9.0",
    "happy-dom": "^15.7.4",
    "nyc": "^17.0.0",
    "playwright-test-coverage": "^1.2.12",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.6",
    "vite-plugin-istanbul": "^6.0.2",
    "vitest": "^2.1.1"
  },
  "type": "module",
  "dependencies": {
    "carbon-icons-svelte": "^12.12.0",
    "svelte-maplibre": "^0.9.14"
  }
}
