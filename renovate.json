{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommitScope": "{{baseDir}}/deps",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchFileNames": ["backend/**"],
      "addLabels": ["backend"]
    },
    {
      "matchFileNames": ["webapp/**"],
      "addLabels": ["frontend/webapp"]
    },
    {
      "matchFileNames": ["android/**"],
      "addLabels": ["frontend/android"]
    }
  ],
  "rangeStrategy": "bump",
  "extends": ["config:recommended"]
}
